<% layout('layouts/default') -%>

<% script('//www.google.com/jsapi') %>
<% script('/javascripts/bootstrap-sortable.js') %>
<% script('/javascripts/stats.js') %>

<h1>Track your site for free</h1>
<h4>Easily measure how many of your website visitors have Javascript enabled</h4>

<form class="track-site" role="form">
  <div class="alert alert-info">
    <span class="glyphicon glyphicon-certificate"></span>
    <div class="beside-icon">We'll never publish your site's page impressions or visitors so your data is safe.  When viewing your statistics, we will only ever show aggregated statistics as ratios.  <a href="#scriptstats.info">View a demo &raquo;</a></div>
  </div>

  <p>Use this form to create Javasript tracking code for your website, or if you are already tracking your website, view your stats.</p>
  <div class="form-group">
    <label for="exampleInputEmail1">Enter your website address</label>
    <input type="text" class="form-control" id="app-id" placeholder="yourwebsite.com">
    <p class="help-block">Optionally segment your stats by appending an identifier such as yourwebsite.com/custom</p>
  </div>
  <button type="submit" id="view-stats-button" class="btn btn-primary">View stats</button>
  <button type="submit" id="generate-tracking-code" class="btn btn-default">Generate tracking code</button>
</form>

<div class="progress progress-striped active" style="display: none">
  <div class="progress-bar progress-bar-info"  role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
    <span class="sr-only">Loading</span>
  </div>
</div>

<div class="alert alert-danger" style="display: none"></div>

<div id="stats-container" class="app">
  <h3 id="app-stats-title">Stats</h3>

  <%- partial('_stats-container') %>
  <div><small class="stats-notice">** Note rows marked as minimal data means there is too little data to be statistically accurate</small></div>
</div>

<div id="tracking-code">
  <h3>Tracking code for</h3>
  <p>Insert the following tracking code into the bottom of every page on your website before the closing &lt;body&gt; tag</p>
  <pre><%=partial('tracking-code')%></pre>
</div>