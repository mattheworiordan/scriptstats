<% layout('layouts/default') -%>

<% script('//www.google.com/jsapi') %>
<% script('/javascripts/stats.js') %>

<h1>Global Javascript Statistics</h1>
<h4>Let's be honest about how many people <em>still</em> don't have Javascript in their browser!</h4>

<div class="progress progress-striped active">
  <div class="progress-bar progress-bar-info"  role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 25%">
    <span class="sr-only">Loading</span>
  </div>
</div>

<div class="alert alert-danger" style="display: none"></div>

<ul class="nav nav-tabs" id="visit-impression-nav">
  <li class="active visits"><a href="#visits" data-toggle="tab">By Visits</a></li>
  <li class="impressions"><a href="#impressions" data-toggle="tab">By Impressions</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="visits">
    <div id="visits-piechart" style="width: 900px; height: 500px;" style="display: none"></div>
  </div>
  <div class="tab-pane" id="impressions">
    <div id="impressions-piechart" style="width: 900px; height: 500px;" style="display: none"></div>
  </div>
</div>

